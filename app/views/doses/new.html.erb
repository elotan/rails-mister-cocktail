<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
     <h1>Add new dose</h1>

    <div>
     <%= simple_form_for [@cocktail, @dose] do |f| %>
       <%= f.input :description %>
       <%= f.association :ingredient %>
       <%= f.submit 'Add dose', class: 'btn btn-primary' %>
     <% end %>
    </div>

    </div>
  </div>
</div>
